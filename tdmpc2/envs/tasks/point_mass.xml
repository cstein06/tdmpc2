<mujoco model="planar point mass">
  <include file="./common/skybox.xml"/>
  <include file="./common/visual.xml"/>
  <include file="./common/materials.xml"/>

  <option timestep="0.02">
    <flag contact="disable"/>
  </option>

  <default>
    <joint type="hinge" axis="0 0 1" limited="true" range="-.29 .29" damping="0"/>
    <motor gear=".1" ctrlrange="-1 1" ctrllimited="true"/>
  </default>

  <worldbody>
    <light name="light" pos="0 0 1"/>
    <camera name="fixed" pos="0 0 .75" quat="1 0 0 0"/>

    <!-- <geom name="ground" type="plane" pos="0 0 0" size=".3 .3 .1" material="decoration" rgba="0.7 0.7 1 1"/> -->
    <geom name="ground" type="plane" pos="0 0 0" size=".3 .3 .1" material="grid"/>

    <geom name="wall_x" type="plane" pos="-.3 0 .02" zaxis="1 0 0"  size=".02 .3 .02" material="decoration"/>
    <geom name="wall_y" type="plane" pos="0 -.3 .02" zaxis="0 1 0"  size=".3 .02 .02" material="decoration"/>
    <geom name="wall_neg_x" type="plane" pos=".3 0 .02" zaxis="-1 0 0"  size=".02 .3 .02" material="decoration"/>
    <geom name="wall_neg_y" type="plane" pos="0 .3 .02" zaxis="0 -1 0"  size=".3 .02 .02" material="decoration"/>

    <body name="pointmass" pos="0 0 .03">
      <camera name="cam0" pos="0 -0.3 0.3" xyaxes="1 0 0 0 0.7 0.7"/>
      <joint name="root_x" type="slide"  pos="0 0 0" axis="1 0 0" />
      <joint name="root_y" type="slide"  pos="0 0 0" axis="0 1 0" />
      <geom name="pointmass" type="sphere" size=".005" material="self" mass=".3" rgba="1 1 0 0.4"/>
    </body>

    <geom name="target" pos="0 0 .01" material="target" type="sphere" size=".015" margin="0.02" rgba="1 0 0 0.3"/> # color: red # old margin="0.1"

    <geom name="pred" pos="0 0 .01" material="target" type="sphere" size=".013" rgba="0 0 1 0.2"/> # color: blue
    
    <geom name="pred_correct" pos="0 0 .03" material="target" type="sphere" size=".008" rgba="0.5 0.3 1 0.4"/> # color: purple

    <!-- <geom name="arrow" type="mjGEOM_ARROW" pos="0 0 .01" size=".02 .02 .02" rgba="1 0 0 1"/> -->
    
    <geom name="optimal" material="decoration" type="cylinder" fromto="-0.2 -0. 0.005 0.2 0.2 0.005" size="0.0005" mass="0" rgba="0 0 0 0.4"/>  # color: black

    <geom name="action_orig" pos="0 0 .01" material="target" type="sphere" size=".007" rgba="0 0 0 0.4"/> # color: black

    <geom name="action_total" pos="0 0 .03" material="target" type="sphere" size=".003" rgba="0.7 0.7 0.7 0.35"/> # color: gray

    <geom name="action_eff" pos="0 0 .03" material="target" type="sphere" size=".002" rgba="0 1 0 0.4"/> # color: green

    <geom name="action_ctrl" pos="0 0 .02" material="target" type="sphere" size=".005" rgba="0.5 0 0.5 0.4"/> # color: purple
    

  </worldbody>

  <tendon>
    <fixed name="t1">
      <joint joint="root_x" coef="1"/>
      <joint joint="root_y" coef="0"/>
    </fixed>
    <fixed name="t2">
      <joint joint="root_x" coef="0"/>
      <joint joint="root_y" coef="1"/>
    </fixed>
  </tendon>

  <actuator>
    <motor name="t1" tendon="t1"/>
    <motor name="t2" tendon="t2"/>
  </actuator>
</mujoco>
